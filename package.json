{
  "name": "english-improver",
  "productName": "english-improver",
  "version": "1.0.0",
  "description": "The application to help learning English",
  "main": ".vite/build/main/main.js",
  "scripts": {
    "start": "electron-forge start",
    "dev": "NODE_ENV=development electron-forge start",
    "electron": "electron ./dist/main/main.js",
    "build:main": "vite build --config vite.main.config.mjs",
    "build:preload": "vite build --config vite.preload.config.mjs",
    "build:renderer": "vite build --config vite.renderer.config.mjs",
    "build": "npm run build:main && npm run build:preload && npm run build:renderer",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "echo \"No linting configured\"",
    "build:mac": "electron-builder --mac",
    "make:mac-arm": "electron-forge make --platform darwin --arch arm64",
    "make:mac-intel": "electron-forge make --platform darwin --arch x64",
    "make:win64": "electron-forge make --platform win32 --arch x64",
    "make:win32": "electron-forge make --platform win32 --arch ia32",
    "make:all": "electron-forge make --platform darwin,win32 --arch x64,arm64"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.6.0",
    "@electron-forge/maker-deb": "^7.6.0",
    "@electron-forge/maker-dmg": "^7.6.0",
    "@electron-forge/maker-rpm": "^7.6.0",
    "@electron-forge/maker-squirrel": "^7.6.0",
    "@electron-forge/maker-zip": "^7.6.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.6.0",
    "@electron-forge/plugin-fuses": "^7.6.0",
    "@electron-forge/plugin-vite": "^7.6.0",
    "@electron/fuses": "^1.8.0",
    "@vitejs/plugin-vue": "^5.2.1",
    "electron": "^33.2.1",
    "terser": "^5.37.0",
    "vite": "^6.0.6"
  },
  "keywords": [
    "learn English"
  ],
  "author": {
    "name": "Logan",
    "email": "yitiansong4@gmail.com"
  },
  "license": "MIT",
  "dependencies": {
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "axios": "^1.7.9",
    "body-parser": "^1.20.3",
    "dompurify": "^3.2.3",
    "electron-forge": "^5.2.4",
    "electron-squirrel-startup": "^1.0.1",
    "express": "^4.21.2",
    "highlight.js": "^11.11.1",
    "marked": "^15.0.4",
    "typescript": "^5.7.2",
    "vue": "^3.5.13",
    "vue-router": "^4.5.0"
  },
  "build": {
    "asar": true,
    "files": [
      "**/*",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "node_modules/express",
        "to": "node_modules/express"
      }
    ]
  }
}
